<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
   >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/shop_icon_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/shop_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:paddingLeft="10dp"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:text="描述描述描述描述描述描述"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/shop_icon_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/shop_property_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/sp_filled_gray"
            android:ellipsize="end"
            android:lines="1"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:text="属性"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/shop_title_tv"
            app:layout_constraintTop_toBottomOf="@+id/shop_title_tv" />



    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/shop_bottom_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingBottom="10dp">


        <TextView
            android:id="@+id/left_tv"
            style="@style/app_normal_bt"
            android:layout_width="65dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="已分拣"
            app:layout_constraintRight_toLeftOf="@+id/right_tv"
            app:layout_constraintTop_toTopOf="@+id/right_tv" />

        <TextView
            android:id="@+id/right_tv"
            style="@style/app_normal_bt"
            android:layout_width="65dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="配送"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/final_payment_tv" />


    </android.support.constraint.ConstraintLayout>


</LinearLayout>