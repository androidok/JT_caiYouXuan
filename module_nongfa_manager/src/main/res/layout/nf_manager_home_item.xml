<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_bg_cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:background="@color/colorAccent"
    tools:ignore="MissingDefaultResource">


    <ImageView
        android:id="@+id/menu_icon_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/menu_title_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/menu_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="商品类目管理"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/menu_title_en_tv"
        app:layout_constraintTop_toBottomOf="@+id/menu_icon_iv"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/menu_title_en_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="商品类目管理"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/menu_icon_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_title_tv" />


</android.support.constraint.ConstraintLayout>