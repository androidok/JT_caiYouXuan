<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/user_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginLeft="17dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_live_translucent_white">
        <ImageView
            android:id="@+id/info_user_image"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="2dp"
            android:src="@mipmap/default_user_head_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/info_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="11dp"
            android:text="姓名"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/info_fans_count"
            app:layout_constraintLeft_toRightOf="@+id/info_user_image"
            app:layout_constraintVertical_chainStyle="packed"/>
        <TextView
            android:id="@+id/info_fans_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:text="0粉丝"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/info_user_image"
            android:layout_alignBottom="@+id/info_user_image"
            app:layout_constraintTop_toBottomOf="@+id/info_user_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/info_user_name"/>

        <TextView
            android:id="@+id/info_guanzhu_btn"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:text="关注"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:background="@drawable/sp_filled_accent_circle"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toRightOf="@+id/info_user_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>


    <ImageView
        android:id="@+id/live_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/live_close"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:layout_marginRight="12dp"/>

</RelativeLayout>