<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/line_bottom"
    android:padding="10dp">

    <TextView
        android:id="@+id/item_address_sel_one"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_address_select_left"
        android:gravity="center"
        android:maxLength="1"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/item_address_sel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="收款人"
        android:textColor="@color/grey"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/item_address_sel_adress"
        app:layout_constraintLeft_toRightOf="@+id/item_address_sel_one"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_address_sel_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_address_sel_name"
        android:text="13421651563"
        android:textColor="@color/grey"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_address_sel_name"
        app:layout_constraintLeft_toRightOf="@+id/item_address_sel_name"
        app:layout_constraintTop_toTopOf="@+id/item_address_sel_name" />

    <ImageView
        android:id="@+id/default_addr_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/default_icon"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/item_address_sel_phone"
        app:layout_constraintLeft_toRightOf="@+id/item_address_sel_phone"
        app:layout_constraintTop_toTopOf="@+id/item_address_sel_phone"></ImageView>

    <TextView
        android:id="@+id/item_address_sel_adress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="地址信息"
        android:textColor="@color/grey"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@+id/item_address_sel_name"
        app:layout_constraintRight_toLeftOf="@+id/item_address_sel_rad"
        app:layout_constraintTop_toBottomOf="@+id/default_addr_iv" />

    <RadioButton
        android:id="@+id/item_address_sel_rad"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:button="@drawable/radiobutton_accent"
        android:gravity="center"
        android:padding="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>