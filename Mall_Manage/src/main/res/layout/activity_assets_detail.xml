<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".home.assets.assetsDetail.AssetsDetailActivity">

    <TextView
        android:id="@+id/bill_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/arrow_down_filled"
        android:drawablePadding="8dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:text="全部"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/month_revenue_tv"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:text="本月总收入:"
        android:layout_height="wrap_content" />
    <include layout="@layout/recycleview_layout" />

</LinearLayout>