<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/commodity_cover_iv"
        android:layout_width="50dp"
        android:src="@mipmap/ic_launcher"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/linearlayout_commodity_des_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:textSize="16sp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:text="描述描述描述描述描述描述描述描述描述描述"
        app:layout_constraintBottom_toBottomOf="@+id/commodity_cover_iv"
        app:layout_constraintLeft_toRightOf="@+id/commodity_cover_iv"
        app:layout_constraintTop_toTopOf="@+id/commodity_cover_iv" />


</android.support.constraint.ConstraintLayout>