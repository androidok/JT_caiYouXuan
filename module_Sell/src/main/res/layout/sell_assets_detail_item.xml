<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact_cl"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <ImageView
        android:id="@+id/buyer_head_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/bank_tag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/buyer_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="dfadsfa"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/buy_date_tv"
        app:layout_constraintLeft_toRightOf="@+id/buyer_head_iv"
        app:layout_constraintRight_toLeftOf="@+id/msg_time_tv"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        app:layout_constraintLeft_toRightOf="@+id/buyer_name_tv"
        app:layout_constraintTop_toTopOf="@+id/buyer_name_tv"
        app:layout_constraintBottom_toBottomOf="@+id/buyer_name_tv"
        android:id="@+id/paytype_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:background="@drawable/stroke_red_square_bg"
        android:text="公户订单"
        android:textColor="@color/red"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/buy_date_tv"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:lines="1"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/buyer_name_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buyer_name_tv" />

    <TextView
        android:id="@+id/buy_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="dfadf"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@+id/buyer_name_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buyer_name_tv" />

    <View
        android:id="@+id/item_divider_v"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="#E0E0E0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/buyer_name_tv"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>