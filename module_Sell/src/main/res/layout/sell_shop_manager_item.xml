<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
  >
    <ImageView
        android:id="@+id/tabitem_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/app_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tabitem_text"/>
    <TextView
        android:id="@+id/tabitem_text"
        style="@style/shop_tab_textview"
        android:text="上报"
        android:singleLine="true"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabitem_image"/>

    <TextView
        android:id="@+id/tabitem_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tabitem_image"
        app:layout_constraintBottom_toTopOf="@+id/tabitem_image"
        app:layout_constraintLeft_toRightOf="@+id/tabitem_image"
        app:layout_constraintRight_toRightOf="@+id/tabitem_image"
        android:minWidth="15dp"
        android:minHeight="15dp"
        android:visibility="gone"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_red_border"
        android:text="1"
        android:textSize="8sp"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        />
</android.support.constraint.ConstraintLayout>