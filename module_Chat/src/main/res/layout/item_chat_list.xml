<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact_cl"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <ImageView
        android:id="@+id/contact_name_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/default_user_head_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/amount_tv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="10dp"
        android:background="@drawable/bg_msg_number"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/contact_name_iv"
        app:layout_constraintLeft_toRightOf="@+id/contact_name_iv"
        app:layout_constraintRight_toRightOf="@+id/contact_name_iv"
        app:layout_constraintTop_toTopOf="@+id/contact_name_iv" />

    <TextView
        android:id="@+id/item_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="dfadsfa"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/item_content_tv"
        app:layout_constraintLeft_toRightOf="@+id/contact_name_iv"
        app:layout_constraintRight_toLeftOf="@+id/msg_time_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_content_tv"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:lines="1"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/item_name_tv"
        app:layout_constraintRight_toRightOf="@+id/item_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_name_tv" />

    <TextView
        android:id="@+id/msg_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="dfadf"
        app:layout_constraintBottom_toBottomOf="@+id/item_name_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_name_tv"></TextView>

    <View
        android:id="@+id/item_divider_v"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="#E0E0E0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/item_name_tv"
        app:layout_constraintRight_toRightOf="parent"></View>

</android.support.constraint.ConstraintLayout>