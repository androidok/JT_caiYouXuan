<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/select_value_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/stroke_gray_square_bg"
        android:textColor="@color/text_title"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:minHeight="32dp"
        android:paddingLeft="5dp"
        android:paddingRight="25dp"
        android:textSize="14dp"
        ></TextView>

    <ImageView
        android:id="@+id/select_arrow_right_iv"
        android:layout_width="12dp"
        android:layout_height="8dp"
        android:src="@mipmap/arrow_down"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/select_value_tv"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/select_value_tv"></ImageView>

    <ImageView
        android:id="@+id/tool_pic_iv"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/select_value_tv"
        app:layout_constraintLeft_toLeftOf="@+id/select_value_tv"
        android:layout_width="100dp"
        android:layout_height="100dp"></ImageView>
</android.support.constraint.ConstraintLayout>