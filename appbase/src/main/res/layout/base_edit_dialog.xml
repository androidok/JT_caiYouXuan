<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sp_filled_white_10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/edit_dialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/close_icon"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:text="标题"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/edit_dialog_content_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/stroke_gray_square_bg"
        android:gravity="left|top"
        android:minHeight="80dp"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/edit_dialog_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_marginBottom="10dp"
        android:paddingRight="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:background="@drawable/sp_filled_accent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:text="确定"
        android:textSize="16dp" />
</LinearLayout>