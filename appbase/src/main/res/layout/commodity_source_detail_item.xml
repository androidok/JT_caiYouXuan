<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/source_pic_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_title"
            android:gravity="center_vertical"
            android:textSize="16dp"
            app:layout_constraintLeft_toRightOf="@+id/important_tag_tv"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/important_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/red"
            app:layout_constraintTop_toTopOf="@+id/source_pic_title_tv"></TextView>


    </android.support.constraint.ConstraintLayout>

    <com.example.appbase.base.customview.selectPics.SelectPicVideoRv
        android:id="@+id/source_spr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>