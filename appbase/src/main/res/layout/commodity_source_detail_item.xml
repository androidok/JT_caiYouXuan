<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.example.appbase.base.customview.selectPics.SelectPicVideoRv
        android:id="@+id/source_spr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/source_des_tv"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/sp_filled_gray_lighter"
        android:gravity="left|top"
        android:hint="文字描述..."
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/add_item_tv"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:text="增加更多"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:background="@drawable/sp_filled_green_lighter"
        android:gravity="center"
        android:textColor="@color/green0"
        android:textSize="18sp" />
</LinearLayout>